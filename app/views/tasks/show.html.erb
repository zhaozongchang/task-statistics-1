<div class="col-md-12">
  <div class="task">
    <% if current_user && current_user == @task.user %>

    <%= link_to("编辑", edit_task_path(@task), class: "btn btn-info pull-right")%>
    <% end %>
  </div>
  <h2><%= @task.title %></h2>
  <hr>
  <p><%= @task.description %></p>
  <hr>
  <h4><td><%= @task.score %></td></h4>

</div>
