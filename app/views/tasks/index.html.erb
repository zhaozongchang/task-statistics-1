<div class="col-md-12">
  <div class="task">
    <%= link_to("新增任务", new_task_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>任务</td>
        <td>叙述</td>
        <td>创建者</td>
        <td>得分</td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>#</td>
          <td><%= link_to(task.title, task_path(task)) %></td>
          <td><%= task.description %></td>
          <td><%= task.user.email %></td>
          <td><%= task.score %></td>
          <td>
              <%= link_to("Edit", edit_task_path(task), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", task_path(task),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
